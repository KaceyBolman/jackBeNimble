{
  "manifest_version": 2,

  "name": "jackBeNimble",
  "description": "This extension gives hotkey order entry for the bitfinex and coinbase exchange platforms.",
  "version": "0.0.2",
  "browser_action": {
    "default_popup": "config.html",
    "default_title": "jackBeNimble"
  },

  "content_scripts": [
    {

      "matches": [
        "https://www.bitfinex.com/trading",
        "https://beta.bitfinex.com/trading",
        "https://exchange.coinbase.com/trade/BTC-USD",
        "https://exchange.coinbase.com/trade?product_id=BTC-USD&"
      ],

      "css": ["main.css"],

      "js": ["config.js", "strategy.bfx.js", "strategy.cbex.js", "jackBeNimble.controller.js", "keyboardHandlers.js", "jackBeNimble.js"],

      "run_at": "document_idle"
    }
  ]
}
