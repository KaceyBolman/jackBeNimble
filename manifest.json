{
  "manifest_version": 2,

  "name": "jackBeNimble",
  "short_name": "jbk",
  "author": "Michael Symmes",
  "description": "A powerful, configurable, hotkey order entry system for multiple bitcoin exchanges.",
  "version": "0.5.2",
  "browser_action": {
    "default_popup": "dist/config.html",
    "default_title": "jackBeNimble"
  },
  "icons": {"128": "jbk-icon.png" },
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": [
        "https://www.gdax.com/*",
        "https://www.bitfinex.com/*"
      ],
      "js": [
        "dist/js/jackBeNimble.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
