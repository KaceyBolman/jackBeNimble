{
  "manifest_version": 2,

  "name": "jackBeNimble",
  "description": "Adds order entry hotkeys for the bitfinex.com and exchange.coinbase.com bitcoin exchange trading pages.",
  "version": "0.0.2",
  "browser_action": {
    "default_popup": "src/html/config.html",
    "default_title": "jackBeNimble"
  },

  "permissions": [
    "storage"
  ],

  "content_scripts": [
    {

      "matches": [
        // Coinbase URLs
        "https://exchange.coinbase.com/trade/BTC-USD",

        // Bitfinex URLs
        "https://www.bitfinex.com/trading/index/btcusd",
        "https://www.bitfinex.com/exchange/index/btcusd",
        "https://www.bitfinex.com/trading/index/ltcusd",
        "https://www.bitfinex.com/exchange/index/ltcusd",
        "https://www.bitfinex.com/trading/index/ethusd",
        "https://www.bitfinex.com/exchange/index/ethusd",
        "https://www.bitfinex.com/trading/index/ethbtc",
        "https://www.bitfinex.com/exchange/index/ethbtc",
        "https://www.bitfinex.com/trading/index/ltcbtc",
        "https://www.bitfinex.com/exchange/index/ltcbtc",

        // Cryptofacilities URLs
        "https://www.cryptofacilities.com/derivatives/market"
      ],

      "css": ["src/css/main.css"],

      "js": [
        "src/js/config.js",
        "src/js/interfaces/interface.bfx.js",
        "src/js/interfaces/interface.cfex.js",
        "src/js/interfaces/interface.cbex.js",
        "src/js/controllers/utilities.controller.js",
        "src/js/controllers/sell.order.controller.js",
        "src/js/controllers/buy.order.controller.js",
        "src/js/keyboardHandlers.js",
        "src/js/jackBeNimble.js"
      ],

      "run_at": "document_idle"
    }
  ]
}
